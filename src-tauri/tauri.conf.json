{
  "build": {
    "devPath": "http://localhost:3000",
    "distDir": "../dist"
  },
  "tauri": {
    "allowlist": {
      "http": {
        "request": true,
        "scope": ["https://api.wolfx.jp/*", "https://devapi.qweather.com/*", "https://geoapi.qweather.com/*"]
      },
      "notification": {
        "all": true,
        "send": true
      }
    },
    "windows": [
      {
        "title": "Baka Weather",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "decorations": true,
        "transparent": false,
        "always_on_top": false
      }
    ]
  }
} 